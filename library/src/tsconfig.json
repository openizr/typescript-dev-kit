{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "jsx": "react",
    "newLine": "LF",
    "strict": true,
    "strictNullChecks": true,
    "target": "es6",
    "lib": [
      "es6",
      "dom",
      "dom.iterable",
      "scripthost",
      "es7"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "./types",
    "../../"
  ],
  "exclude": [
    "../../coverage",
    "../../doc",
    "../../**/*.js"
  ]
}